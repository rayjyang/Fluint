<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="eia.fluint.TransactionFSAirportFragment"
    android:id="@+id/airportLinLayout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buysellToggleContainer"
        android:layout_marginBottom="8dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewBuyToggleIndex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@color/primaryColor"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="4dp"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/buyToggleIndex"
                android:layout_gravity="center"
                android:text="@string/buy"
                android:textColor="@color/whiteColor"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="8dp"
                android:textSize="18sp"
                android:textAllCaps="false" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            card_view:cardBackgroundColor="@color/whiteColor"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="4dp"
            android:id="@+id/cardViewSellToggleIndex"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/sellToggleIndex"
                android:layout_gravity="center"
                android:text="@string/sell"
                android:textColor="@color/primaryColor"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="8dp"
                android:textSize="18sp"
                android:textAllCaps="false"/>


        </android.support.v7.widget.CardView>


    </LinearLayout>


    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple1"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/currencyChoiceContainer"
            android:clickable="true">

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/currencyChoiceImgContainer"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/currencyChoiceSpinnerContainer"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Currency"
                    android:textSize="18sp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/tvChangeCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textSize="15sp"/>


            </LinearLayout>

        </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>


    <View style="@style/Divider"
        android:id="@+id/divider1" />

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/ripple2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/amountChoiceContainer">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:id="@+id/amountChoiceImgContainer"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/amountChoiceETContainer"
                android:clickable="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textSize="18sp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textSize="15sp"
                    android:id="@+id/tvChangeAmount" />


            </LinearLayout>

        </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

    <View style="@style/Divider"
        android:id="@+id/divider2" />

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple3"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/arrivalDateContainer"
            android:clickable="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/arrivalDateImgHolder">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/imageView" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/arrivalDateChoiceContainer"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrival date"
                    android:textSize="18sp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To be set"
                    android:textSize="15sp"
                    android:id="@+id/tvChangeArrivalDate"/>
            </LinearLayout>
        </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

    <View style="@style/Divider"
        android:id="@+id/divider3" />

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple4"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/arrivalTimeContainer"
            android:clickable="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/arrivalTimeImgHolder">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/imageView2" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/arrivalTimeChoiceContainer"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrival time"
                    android:textSize="18sp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To be set"
                    android:textSize="15sp"
                    android:id="@+id/tvChangeArrivalTime"/>
            </LinearLayout>
        </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

    <View style="@style/Divider"
        android:id="@+id/divider4" />

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple5"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/flightNumberContainer"
            android:clickable="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/flightNumberImgHolder">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/flightNumberImg" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/flightNoChoiceContainer"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flight number"
                    android:textSize="18sp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Optional"
                    android:textSize="15sp"
                    android:id="@+id/tvChangeFlightNo"/>

            </LinearLayout>
        </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

    <View style="@style/Divider"
        android:id="@+id/divider5" />

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple6"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/airportNameContainer"
            android:layout_marginBottom="8dp"
            android:clickable="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/airportImgHolder">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/imageView3" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/airportChoiceContainer"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Airport"
                    android:textSize="18sp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvChangeAirport"
                    android:textSize="15sp"
                    android:text="None"/>

            </LinearLayout>
        </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <com.balysv.materialripple.MaterialRippleLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/primaryColor">

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Submit"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteColor"
                    android:id="@+id/submitNewPost"
                    android:textSize="18sp"
                    android:background="@color/primaryColor"/>

            </android.support.v7.widget.CardView>

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

</LinearLayout>
