<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eia.fluint">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="ANDROID.PERMISSION.ACCESS_FINE_LOCATION" />

    <application
        android:name="eia.fluint.FluintApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".LoginSignUpActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".MainFeedActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_main_feed" />
        <activity
            android:name=".ContinueSignUpActivity"
            android:label="@string/title_activity_continue_sign_up" />
        <activity
            android:name=".UserPreferencesActivity"
            android:label="@string/title_activity_user_preferences" />
        <activity
            android:name=".SplashActivity"
            android:label="@string/title_activity_splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddPostActivity"
            android:label="@string/title_activity_add_post">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eia.fluint.MainFeedActivity" />
        </activity>
    </application>

</manifest>
