<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="eia.fluint.SettingsActivity">

    <include
        android:id="@+id/toolbarSettings"
        layout="@layout/toolbar_settings_activity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">



            <android.support.v7.widget.CardView
                android:id="@+id/buyPreference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardMaxElevation="0dp"
                card_view:cardElevation="0dp">

                <LinearLayout
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buying"
                        android:textSize="16sp"
                        android:textColor="@color/textColorPrimary" />

                    <TextView
                        android:id="@+id/buyingPreference"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:ems="13"
                        android:textColor="@color/textColorSecondary"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/sellPreference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardMaxElevation="0dp"
                card_view:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selling"
                        android:textSize="16sp"
                        android:textColor="@color/textColorPrimary"/>

                    <TextView
                        android:id="@+id/sellingPreference"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:ems="13"
                        android:textColor="@color/textColorSecondary"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/radiusPreference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardMaxElevation="0dp"
                card_view:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Radius"
                        android:textSize="16sp"
                        android:textColor="@color/textColorPrimary"/>

                    <TextView
                        android:id="@+id/radiusDistPreference"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:textColor="@color/textColorSecondary"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/logOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardMaxElevation="0dp"
                card_view:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log out"
                        android:textSize="16sp"
                        android:textColor="@color/textColorPrimary"/>

                    <TextView
                        android:id="@+id/loggedInAsPref"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You are logged in as: "
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:ems="17"
                        android:ellipsize="end"
                        android:textColor="@color/textColorSecondary"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
